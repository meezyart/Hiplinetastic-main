<!-- Header Section Start -->
<div class="header-section header-shadow sticky-header section">
    <div class="header-inner">
        <div class="container position-relative">
            <div class="row justify-content-between align-items-center">

                <!-- Header Logo Start -->
                <div class="col-xl-2 col-auto">
                    <div class="header-logo">
                        <a href="{{ '/' | absoluteUrl }}">
                            {% set darkLogo %}{% imageUrl settings.logo.darkLogo.url %}{% endset %}
                            {% set lightLogo %}{% imageUrl settings.logo.lightLogo.url %}{% endset %}
                            <img srcset="{% imageSrcset darkLogo %}" class="dark-logo" data-sizes="auto" alt="Logo">
                            <img srcset="{% imageSrcset lightLogo %}" class="light-logo" data-sizes="auto" alt="Logo">

                        </a>
                    </div>
                </div>
                <!-- Header Logo End -->

                <!-- Header Main Menu Start -->
                <div class="col d-none d-xl-block position-static">
                    {% if sections.header.menu %}
                        <nav class="site-main-menu menu-hover-1">
                            <ul>
                                {# <li class=" position-static">
                                    <a href="{{ '/' | url }}">
                                        <span class="menu-text">Home</span></a>
                                </li> #}

                                {% for menuItem in sections.header.menu %}
                                    <li {% if menuItem.dropdownItems %} class="has-children"  {% endif %}>
                                        <a {% if menuItem.externalUrl %} href="{{ menuItem.externalUrl | url }}" {% else %} href="{{('/'+menuItem.slug) | absoluteUrl }}" {% endif %} {% if menuItem.openInNewTab %} target="_blank" {% endif %}>
                                            <span class="menu-text" >{{ menuItem.name }}</span></a>
                                        <span class="menu-toggle">
                                            <i class="far fa-angle-down"></i>
                                        </span>
                                        {% if menuItem.dropdownItems%}
                                            <ul class="sub-menu">
                                                {% for dropMenuItem in menuItem.dropdownItems %}
                                                    <li>
                                                        <a {% if dropMenuItem.externalUrl %} href="{{  dropMenuItem.externalUrl | url }}" {% else %} href="{{  ('/'+dropMenuItem.slug) | absoluteUrl }}" {% endif %} {% if dropMenuItem.openInNewTab %} target="_blank" {% endif %}>
                                                            <span class="menu-tex">{{ dropMenuItem.name }}</span></a>
                                                        <span class="menu-toggle">
                                                            <i class="far fa-angle-down"></i>
                                                        </span>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </nav>
                    {% endif %}
                </div>
                <!-- Header Main Menu End -->

                <!-- Header Right Start -->
                <div class="col-xl-2 col-auto">
                    <div class="header-right">
                        <div class="inner">
                            <div class="header-cart">
                            <healcode-widget data-version="0.2" data-link-class="healcode-cart-text-link" data-site-id="66740" data-mb-site-id="4561" data-bw-identity-site="false" data-type="cart-link" data-inner-html='<i class="far fa-shopping-cart"></i>"'  />
                                    </div>
                            <!-- Header Login Start -->

                            <!-- Header Login End -->
                            <!-- Header Social Start -->
                            <div class="header-sociax d-none d-sm-flex">
                            <healcode-widget data-version="0.2" data-link-class="healcode-login-register-text-link btn btn-primary btn-hover-secondary btn-long" data-site-id="66740" data-mb-site-id="4561" data-bw-identity-site="false" data-type="account-link" data-inner-html="Sign Up"  />

                                {# <a href="#"><i class="fab fa-twitter"></i></a>
                                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                                        <a href="#"><i class="fab fa-instagram"></i></a>
                                        <a href="#"><i class="fab fa-linkedin"></i></a> #}
                            </div>
                            <!-- Header Social End -->

                            <!-- Header Mobile Menu Toggle Start -->
                            <div class="header-mobile-menu-toggle d-xl-none ml-sm-2">
                                <button class="toggle">
                                    <i class="icon-top"></i>
                                    <i class="icon-middle"></i>
                                    <i class="icon-bottom"></i>
                                </button>
                            </div>
                            <!-- Header Mobile Menu Toggle End -->
                        </div>
                    </div>
                </div>
                <!-- Header Right End -->

            </div>
        </div>
    </div>
</div>
<!-- Header Section End -->